<div class="ui comments">
  <h3 class="ui dividing header">Comments</h3>
  <% comments.forEach(function (comment) { %>
    <div class="comment">
      <div class="content">
        <div class="author"><%= comment.user.name %></div>
        <!-- <div class="metadata">
          <span class="date"></span>
        </div> -->
        <div class="text"><%= comment.content %></div>
      </div>
    </div>
  <% }) %>
  <% if (user) { %>
    <form class="ui reply form" method="post" action="/comments">
      <input name="postId" value="<%= post.id %>" hidden>
      <div class="field">
        <textarea name="content"></textarea>
      </div>
      <button type="submit" class="ui blue labeled submit icon button"><i class="icon edit"></i> Add Reply </button>
    </form>
  <% } %>
</div>
