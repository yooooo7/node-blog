    <script>
      $(document).ready(() => {
        // 点击按钮弹出下拉框
        $('.ui.dropdown').dropdown();

        // 点击按钮关闭消息框
        $('.message .close')
          .on('click', function () {
            $(this)
              .closest('.message')
              .transition('fade')
            ;
          })
      })
